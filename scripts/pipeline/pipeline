name: Continuous Deployment Pipeline

on:
  push:
    branches:
      - main  # Se ejecuta cuando hay un push a la rama principal

jobs:
  build:
    runs-on: ubuntu-latest

    steps:
    - name: Check out code
      uses: actions/checkout@v2

    - name: Set up Node.js (si es una app basada en Node.js, ajusta seg√∫n sea necesario)
      uses: actions/setup-node@v2
      with:
        node-version: '14'

    - name: Install dependencies
      run: npm install

    - name: Run tests
      run: npm test

  release:
    runs-on: ubuntu-latest
    needs: build

    steps:
    - name: Check out code
      uses: actions/checkout@v2

    - name: Set up environment for release
      run: ./scripts/entorno-liberacion/setup.sh

    - name: Run release tests
      run: ./scripts/pruebas/test.sh

  deploy:
    runs-on: ubuntu-latest
    needs: release

    steps:
    - name: Check out code
      uses: actions/checkout@v2

    - name: Deploy to production
      run: ./scripts/despliegue/deploy.sh
